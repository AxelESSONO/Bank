<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/accountTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bank_name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/amountAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="12345.67"
        android:textColor="@color/header_color"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintTop_toTopOf="@id/accountTitle"
        app:layout_constraintBottom_toBottomOf="@id/accountTitle"
        app:layout_constraintEnd_toStartOf="@id/operationButton"/>

    <ImageView
        android:id="@+id/operationButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/round_arrow_forward_ios_24"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/header_color" />

</androidx.constraintlayout.widget.ConstraintLayout>